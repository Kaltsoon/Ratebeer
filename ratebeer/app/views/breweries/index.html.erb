<p id="notice"><%= notice %></p>

<h1>Breweries</h1>
<% cache "brewerieslist", skip_digest: true do %>
<ul class="inline">
  <li>
    <h2>Active</h2>
    <p> number active of breweries <%= @active_breweries.count %> </p>
    <%= render 'list', :breweries => @active_breweries %>
  </li>
  <li>
    <h2>Retired</h2>
    <p> number retired of breweries <%= @retired_breweries.count %> </p>
    <%= render 'list', :breweries => @retired_breweries %>
  </li>
</ul>
<h2>All</h2>
<p> number of breweries <%= @breweries.count %></p>
<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to "Name", breweries_path(order: "name") %></th>
    <th><%= link_to "Year", breweries_path(order: "year") %></th>
  </tr>
  </thead>
  <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
  <% end %>
</table>
<% end %>
<br/>

<%= link_to('New Brewery', new_brewery_path, :class => "btn btn-success") if not current_user.nil? %>
<h1>Listing styles</h1>

<table class="table table-hover">
  <thead>  
    <tr>
      <th>Name</th>
    </tr>
</thead>
<tbody>
<% @styles.each do |style| %>
  <tr>
    <td><%= link_to style.name, style_path(style) %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Style', new_style_path, class: "btn btn-success" unless current_user.nil? %>

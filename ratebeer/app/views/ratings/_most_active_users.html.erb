<table class="table table-hover">
	<thead>
		<tr>
			<th>name</th>
			<th>ratings count</th>
			<th>favorite style</th>
			<th>favorite brewery</th>
		</tr>
	</thead>
	<tbody>
		<% users.each do |user| %>
			<tr>
				<td><%= link_to user.username, user %></td>
				<td><%= user.ratings.count %></td>
				<td><%= link_to user.favorite_style, user.favorite_style unless user.favorite_style.nil? %></td>
				<td><%= link_to user.favorite_brewery, user.favorite_brewery unless user.favorite_brewery.nil? %></td>
			</tr>
		<% end %>
	</tbody>
</table>